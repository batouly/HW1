<?xml version="1.0"?>
<robot name="my_robot">

<material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0.8 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <link name="base" />
  <link name="link1">
    <visual>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 3"/>
      </geometry>
      <material name="white"/>
    </visual>
    
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <link name="link2">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 2"/>
      </geometry>
      <material name="black"/>
    </visual>
  
    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <link name="link3">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 1"/>
      </geometry>
        <material name="blue"/>
    </visual>
    
    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <link name="tool">
  </link>
  <joint name="joint1" type="revolute">
    <parent link="base" />
    <child link="link1" />
    <limit effort="30" velocity="1.0" lower="-1.570795" upper="1.570795" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 0 1" />
  </joint>
   <transmission name="joint1_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="$joint1_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="joint1">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <joint name="joint2" type="revolute">
    <parent link="link1" />
    <child link="link2" />
    <limit effort="30" velocity="1.0" lower="-1.570795" upper="1.570795" />
    <origin xyz="0 0 3" rpy="-0.785398 0 0" />
    <axis xyz="1 0 0" />
  </joint>
   <transmission name="joint2_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="$joint2_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="joint2">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <joint name="joint3" type="revolute">
    <parent link="link2" />
    <child link="link3" />
    <limit effort="30" velocity="1.0" lower="-1.570795" upper="1.570795" />
    <origin xyz="0 0 2" rpy="-0.5 0 0" />
    <axis xyz="1 0 0" />
  </joint>
   <transmission name="joint3_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="$joint3_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="joint3">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
  </transmission>
  <joint name="link3_to_tool" type="fixed">
    <parent link="link3" />
    <child link="tool" />
    <limit effort="30" velocity="1.0" lower="-6.28318" upper="6.28318" />
    <origin xyz="0 0 1" rpy="0 0 0" />
    <axis xyz="0 0 1" />
  </joint>
</robot>